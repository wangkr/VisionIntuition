<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
   >
    <SurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <ImageView
        android:id="@+id/focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/focus_focusing"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/take_photo_preview"/>

    <RelativeLayout
        android:id="@+id/take_photo_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/take_photo_toolbar_color">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/btn_take_photo_gallery"
            android:src="@drawable/btn_take_photo_gallery"/>
        <ImageView
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/btn_camera_change"
            android:src="@drawable/btn_take_photo_camera_change"/>
        <ImageView
            android:id="@+id/btn_take_photo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/btn_take_photo"/>
    </RelativeLayout>
    <!-- 预览照片时"存储”和“放弃”按钮布局-->
    <RelativeLayout
        android:id="@+id/preview_photo_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photo_preview_bar_height"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="@color/take_photo_toolbar_color"
        android:visibility="invisible"
        >

        <ImageView
            android:id="@+id/btn_take_photo_ok"
            android:layout_width="@dimen/photo_preview_ok_btn_Width"
            android:layout_height="@dimen/photo_preview_ok_btn_Heigth"
            android:src="@drawable/btn_take_photo_ok"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <ImageView
            android:id="@+id/btn_take_photo_cancell"
            android:layout_width="@dimen/photo_preview_ok_btn_Width"
            android:layout_height="@dimen/photo_preview_ok_btn_Heigth"
            android:src="@drawable/btn_take_photo_ok"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            />
        <!-- 两个按钮的文字布局-->
        <RelativeLayout
            android:layout_width="@dimen/photo_preview_ok_btn_Width"
            android:layout_height="@dimen/photo_preview_ok_btn_Heigth"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_take_photo_ok_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/photo_preview_ok_btnTextSize"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/photo_preview_ok_btn_Width"
            android:layout_height="@dimen/photo_preview_ok_btn_Heigth"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_take_photo_cancell_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/photo_preview_ok_btnTextSize"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>