<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circlebutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/activity_background_color"
    android:theme="@android:style/Theme.NoTitleBar">
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="60sp"
        android:textColor="@color/text_title_color"
        android:text="@string/text_title"
        />
    <ImageView
        android:layout_width="@dimen/main_mascot_width"
        android:layout_height="@dimen/main_mascot_height"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/octopus_main" />
    <RelativeLayout
        android:layout_width="@dimen/open_pic_layout_width"
        android:layout_height="@dimen/main_1_btn_size"
        android:paddingLeft="@dimen/main_1_btn_LRpadding"
        android:paddingRight="@dimen/main_1_btn_LRpadding"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/open_pic_layout"
        >
        <com.kairong.circleButton.CircleButton
            android:layout_width="@dimen/main_1_btn_size"
            android:layout_height="@dimen/main_1_btn_size"
            android:id="@+id/btn_camera"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            circlebutton:cb_color="@color/camer_open_button_color"
            android:src="@drawable/camera_open_icn"
            />
        <com.kairong.circleButton.CircleButton
            android:layout_width="@dimen/main_1_btn_size"
            android:layout_height="@dimen/main_1_btn_size"
            android:id="@+id/btn_gallery"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            circlebutton:cb_color="@color/gallery_open_button_color"
            android:src="@drawable/gallery_open_icn"
            />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/composer_wrapper_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/open_pic_layout"
        android:layout_centerHorizontal="true">
        <com.kairong.circleButton.CircleButton
            android:id="@+id/btn_composer_face_match"
            android:layout_width="@dimen/main_2_btn_size"
            android:layout_height="@dimen/main_2_btn_size"
            android:layout_centerHorizontal="true"
            android:src="@drawable/face_match_button_icn"
            circlebutton:cb_color="@color/comp_child_buttons_color"
            android:visibility="invisible"/>
        <com.kairong.circleButton.CircleButton
            android:id="@+id/btn_composer_age_test"
            android:layout_width="@dimen/main_2_btn_size"
            android:layout_height="@dimen/main_2_btn_size"
            android:layout_centerHorizontal="true"
            android:src="@drawable/age_test_button_icn"
            circlebutton:cb_color="@color/comp_child_buttons_color"
            android:visibility="invisible"/>
        <com.kairong.circleButton.CircleButton
            android:id="@+id/btn_composer_text_conversion"
            android:layout_width="@dimen/main_2_btn_size"
            android:layout_height="@dimen/main_2_btn_size"
            android:layout_centerHorizontal="true"
            android:src="@drawable/text_convertion_button_icn"
            circlebutton:cb_color="@color/comp_child_buttons_color"
            android:visibility="invisible"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/open_pic_layout"
        android:layout_centerHorizontal="true">
        <com.kairong.circleButton.CircleButton
            android:id="@+id/btn_composer_button"
            android:layout_width="@dimen/main_2_btn_size"
            android:layout_height="@dimen/main_2_btn_size"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            circlebutton:cb_color="@color/comp_button_color"
            />
        <ImageView
            android:id="@+id/btn_composer_button_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icn_plus"
            />
    </RelativeLayout>
</RelativeLayout>