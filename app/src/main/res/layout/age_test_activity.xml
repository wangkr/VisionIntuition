<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circleprogress="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="20dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/at_activity_background_color">
    <!-- 显示头像 -->
    <RelativeLayout
        android:id="@+id/age_test_image_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/at_imageview_height"
        android:paddingRight="@dimen/activity_secondary_margin"
        android:paddingLeft="@dimen/activity_secondary_margin"
        android:paddingTop="@dimen/activity_secondary_margin"
        android:paddingBottom="@dimen/activity_secondary_margin"
        android:background="@color/semitransparent_color">
        <ImageView
            android:id="@+id/age_test_face_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <!-- 圆形进度等待动画-->
        <com.kairong.circleProgress.CircleProgress
            android:id="@+id/age_test_image_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            circleprogress:color1="@android:color/holo_red_light"
            circleprogress:color2="@android:color/holo_green_light"
            circleprogress:color3="@android:color/holo_blue_light"
            />
    </RelativeLayout>

    <!-- 文字对话布局-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/age_test_image_layout"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/age_test_mascot"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/mascot_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_age_test_dialog"
            android:background="@drawable/dialog"
            android:layout_toRightOf="@id/age_test_mascot"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>